<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Wristkey" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
    <style name="Wristkey.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/pill_shape_border</item>
        <item name="backgroundTint">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">2.5dp</item>
        <item name="drawableTint">@color/white</item>
        <item name="fontFamily">@font/productsans</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>
