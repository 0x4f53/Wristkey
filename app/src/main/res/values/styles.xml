<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Wristkey" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
    <style name="Wristkey.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/pill_shape_border</item>
        <item name="backgroundTint">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">2.5dp</item>
        <item name="drawableTint">@color/white</item>
        <item name="fontFamily">@font/productsans</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="Wristkey.RadioButton" parent="Widget.Material3.CheckedTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/productsans</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:background">@drawable/pill_shape_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:checkMark">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:checkable">true</item>
        <item name="android:paddingStart">22.5dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_margin">2.5dp</item>
    </style>
    <style name="Wristkey.TextInputEditText">
        <item name="iconTint">@color/white</item>
        <item name="android:fontFamily">@font/productsans</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:foregroundGravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
