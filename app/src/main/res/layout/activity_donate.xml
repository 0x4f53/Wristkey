<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BoxInsetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="app.wristkey.AddActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">
        <requestFocus/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="75dp"
            android:orientation="vertical">

            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="@string/donate_label"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2.5dp"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="@string/donation_message"
                android:textColor="@color/primary_text_dark"
                android:textStyle="normal" />

            <Button
                android:id="@+id/paypal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2.5dp"
                android:background="@drawable/pill_shape_border"
                android:drawableStart="@drawable/paypal"
                android:drawablePadding="15dp"
                android:paddingHorizontal="25dp"
                android:drawableTint="?android:attr/textColorPrimary"
                android:fontFamily="@font/productsans"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.05"
                android:text="PayPal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2.5dp"
                android:background="@drawable/pill_shape_border"
                android:drawableStart="@drawable/github"
                android:drawablePadding="15dp"
                android:paddingHorizontal="25dp"
                android:drawableTint="?android:attr/textColorPrimary"
                android:fontFamily="@font/productsans"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.05"
                android:text="GitHub Sponsors"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bitcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2.5dp"
                android:background="@drawable/pill_shape_border"
                android:drawableStart="@drawable/bitcoin"
                android:drawablePadding="15dp"
                android:drawableTint="?android:attr/textColorPrimary"
                android:fontFamily="@font/productsans"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.05"
                android:paddingHorizontal="25dp"
                android:text="Bitcoin"
                android:textAllCaps="false" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2.5dp"
                android:background="@drawable/pill_shape_border"
                android:drawableStart="@drawable/ic_prev"
                android:drawablePadding="15dp"
                android:paddingHorizontal="10dp"
                android:drawableTint="?android:attr/textColorPrimary"
                android:fontFamily="@font/productsans"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.05"
                android:paddingEnd="20dp"
                android:text="Back"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/productsans"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:letterSpacing="0.075"
        android:orientation="horizontal"
        android:background="@drawable/pill_shape_simple"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:text="04:20"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>