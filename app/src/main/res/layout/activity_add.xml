<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BoxInsetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/SettingsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/lightDemo"
                android:textSize="15sp"
                android:textStyle="italic"
                android:visibility="invisible" />

            <View
                android:id="@+id/divider23"
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="@color/darkAccents"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/ManualEntry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ManualEntryTokensButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ManualEntryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/preference_wrapped_icon"
                        android:backgroundTint="@color/colorAccent"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_baseline_edit_24" />

                    <TextView
                        android:id="@+id/ManualEntryButtonLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:foregroundGravity="center"
                        android:gravity="center|left"
                        android:text="Enter Manually"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="@color/darkAccents" />

            <LinearLayout
                android:id="@+id/ImportBitwardenTokens"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ImportBitwardenTokensButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ImportBitwardenButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/preference_wrapped_icon"
                        android:backgroundTint="@color/colorAccent"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_import" />

                    <TextView
                        android:id="@+id/ImportBitwardenButtonLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:foregroundGravity="center"
                        android:gravity="center|left"
                        android:text="Import from\nBitwarden"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider13"
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="@color/darkAccents" />

            <LinearLayout
                android:id="@+id/ImportAuthenticatorTokens"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ImportAuthenticatorTokensButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ImportAuthenticatorButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/preference_wrapped_icon"
                        android:backgroundTint="@color/colorAccent"
                        android:src="@drawable/ic_baseline_qr_code_scanner_24" />

                    <TextView
                        android:id="@+id/ImportAuthenticatorButtonLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:foregroundGravity="center"
                        android:gravity="center|left"
                        android:text="Import from\nGoogle\nAuthenticator"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="@color/darkAccents" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <ImageButton
                android:id="@+id/BackButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/preference_wrapped_icon"
                android:backgroundTint="@color/colorAccent"
                android:foregroundGravity="center"
                android:src="@drawable/ic_back" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>
    </ScrollView>

</androidx.wear.widget.BoxInsetLayout>