<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BoxInsetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".BitwardenJSONImport"
    tools:deviceIds="wear">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/ImportingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bitwarden_importing"
            android:textAlignment="center"
            android:textColor="@color/primary_text_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/LoadingIcon"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/darkAccents" />

        <TextView
            android:id="@+id/ImportingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/bitwarden_import_description"
            android:textColor="@color/primary_text_dark"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>

</androidx.wear.widget.BoxInsetLayout>