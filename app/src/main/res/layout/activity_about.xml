<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BoxInsetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="zeroxfourf.wristkey.AddActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">
        <requestFocus/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7.5dp"
            android:paddingTop="25dp"
            android:paddingBottom="75dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/AppIcon"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher" />

            <TextView
                style="@style/Wristkey.TextView"
                android:id="@+id/AppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/productsans"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Version"
                style="@style/Wristkey.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="version x.x"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/AuthenticatorDescription"
                style="@style/Wristkey.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2.5dp"
                android:gravity="center"
                android:text="@string/about_app"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/sourceCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2.5dp"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="@string/about_url"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2.5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/productsans"
                    android:gravity="center"
                    android:text="With " />

                <TextView
                    android:id="@+id/heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/productsans"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="❤️" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/productsans"
                    android:gravity="center"
                    android:text=" by Owais" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/donateButton"
                style="@style/Wristkey.Button"
                app:icon="@drawable/outline_attach_money_24"
                android:text="Donate" />

            <Button
                android:id="@+id/licenseButton"
                style="@style/Wristkey.Button"
                app:icon="@drawable/outline_gavel_24"
                android:text="View License" />

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/backButton"
                style="@style/Wristkey.Button"
                app:icon="@drawable/ic_prev"
                android:text="Back" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/productsans"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:letterSpacing="0.075"
        android:orientation="horizontal"
        android:background="@drawable/pill_shape_black"
        android:textColor="@color/white"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:text="04:20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>