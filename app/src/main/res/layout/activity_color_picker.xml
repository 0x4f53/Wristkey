<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BoxInsetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="app.wristkey.SettingsActivity"
    tools:deviceIds="wear">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:paddingBottom="75dp">

            <TextView
                android:id="@+id/ColorPickerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/productsans"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Color Picker"
                android:textColor="@color/lightDemo"
                android:textSize="16dp"
                android:textStyle="normal" />


            <LinearLayout
                android:id="@+id/Theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <RadioGroup
                    android:id="@+id/ThemeRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:checkedButton="@id/darkTheme"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/backgroundLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:fontFamily="@font/productsans"
                        android:text="Background"
                        android:textColor="@color/lightDemo"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/lightTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/lightDemo"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="White"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/darkTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/darkAccents"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="Black"
                        android:textSize="16sp" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/AccentRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:checkedButton="@id/Blue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/accentLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:fontFamily="@font/productsans"
                        android:text="Accent"
                        android:textColor="@color/lightDemo"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/Red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/redAccents"
                        android:ellipsize="none"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="Red"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/Saffron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/saffronAccents"
                        android:ellipsize="none"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="Saffron"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/Yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/yellowAccents"
                        android:ellipsize="none"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="Yellow"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/blueAccents"
                        android:ellipsize="none"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="Blue"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/Teal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/tealAccents"
                        android:ellipsize="none"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="Teal"
                        android:textSize="16sp" />

                </RadioGroup>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:paddingStart="25dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/productsans"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:paddingEnd="15dp"
                        android:text="Back"
                        android:textSize="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/clockBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/productsans"
                android:foregroundGravity="center"
                android:gravity="center"
                android:letterSpacing="0.085"
                android:paddingHorizontal="5dp"
                android:text="12:00"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>