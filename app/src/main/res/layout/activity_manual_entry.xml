<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BoxInsetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="app.wristkey.ManualEntryActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical">

        <requestFocus />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="7.5dp"
            android:paddingTop="25dp"
            android:paddingBottom="75dp">

            <TextView
                android:id="@+id/SettingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/productsans"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Add Item"
                android:textColor="@color/grayAccents"
                android:textSize="16sp"
                android:letterSpacing="0.05"
                android:textStyle="normal" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/issuer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Issuer"
                style="@style/Wristkey.TextInputLayout"
                app:startIconDrawable="@drawable/outline_factory_24" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/issuerInput"
                    style="@style/Wristkey.TextInputEditText"
                    android:inputType="textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/secret"
                style="@style/Wristkey.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Secret"
                app:startIconDrawable="@drawable/outline_password_24" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/secretInput"
                    style="@style/Wristkey.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account"
                android:layout_width="match_parent"
                style="@style/Wristkey.TextInputLayout"
                android:layout_height="wrap_content"
                android:hint="Account"
                app:startIconDrawable="@drawable/outline_account_circle_24" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/accountInput"
                    style="@style/Wristkey.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconTint="@color/white"
                style="@style/Wristkey.TextInputLayout"
                android:hint="Label"
                app:startIconDrawable="@drawable/outline_label_24" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/labelInput"
                    style="@style/Wristkey.TextInputEditText"
                    android:layout_width="match_parent"
                    android:inputType="textCapWords"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/modeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/productsans"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="Mode"
                    android:layout_margin="5dp"
                    android:letterSpacing="0.05" />
                <CheckedTextView
                    android:id="@+id/timeButton"
                    style="@style/Wristkey.RadioButton"
                    android:checked="true"
                    android:drawableStart="@drawable/ic_outline_access_time_24"
                    android:text="Time"
                    />

                <CheckedTextView
                    android:id="@+id/counterButton"
                    style="@style/Wristkey.RadioButton"
                    android:drawableStart="@drawable/baseline_exposure_plus_1_24"
                    android:text="Counter"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/counter"
                    style="@style/Wristkey.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Count"
                    app:startIconDrawable="@drawable/outline_add_circle_outline_24" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/counterInput"
                        style="@style/Wristkey.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="0" />

                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:id="@+id/validityGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/validityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/productsans"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="Validity"
                        android:layout_margin="5dp"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/periodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/productsans"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:letterSpacing="0.05"
                        android:text="30" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/periodSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        app:tickVisible="false"
                        android:stepSize="1.0"
                        android:value="30"
                        android:valueFrom="1"
                        android:valueTo="59" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/algorithmGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/productsans"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="Algorithm"
                    android:layout_margin="5dp"
                    android:letterSpacing="0.05" />
                <CheckedTextView
                    android:id="@+id/sha1Button"
                    style="@style/Wristkey.RadioButton"
                    android:checked="true"
                    android:drawableStart="@drawable/baseline_data_array_24"
                    android:text="SHA-1"
                    />
                <CheckedTextView
                    android:id="@+id/sha256Button"
                    style="@style/Wristkey.RadioButton"
                    android:drawableStart="@drawable/baseline_data_array_24"
                    android:text="SHA-256"
                    />
                <CheckedTextView
                    android:id="@+id/sha512Button"
                    style="@style/Wristkey.RadioButton"
                    android:drawableStart="@drawable/baseline_data_array_24"
                    android:text="SHA-512"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digitsGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/productsans"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="Digits"
                    android:layout_margin="5dp"
                    android:letterSpacing="0.05" />
                <CheckedTextView
                    android:id="@+id/fourButton"
                    style="@style/Wristkey.RadioButton"
                    android:drawableStart="@drawable/baseline_dialpad_24"
                    android:text="4 digits"
                    />
                <CheckedTextView
                    android:id="@+id/sixButton"
                    style="@style/Wristkey.RadioButton"
                    android:checked="true"
                    android:drawableStart="@drawable/baseline_dialpad_24"
                    android:text="6 digits"
                    />
                <CheckedTextView
                    android:id="@+id/eightButton"
                    style="@style/Wristkey.RadioButton"
                    android:drawableStart="@drawable/baseline_dialpad_24"
                    android:text="8 digits"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/doneButton"
                style="@style/Wristkey.Button"
                app:icon="@drawable/ic_done"
                android:text="Done" />

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/backButton"
                style="@style/Wristkey.Button"
                app:icon="@drawable/ic_prev"
                android:text="Back" />

            <Button
                android:id="@+id/deleteButton"
                style="@style/Wristkey.Button"
                app:icon="@drawable/ic_outline_delete_24"
                android:text="Delete" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/productsans"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:letterSpacing="0.075"
        android:textColor="@color/white"
        android:orientation="horizontal"
        android:background="@drawable/pill_shape_black"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:text="04:20"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>